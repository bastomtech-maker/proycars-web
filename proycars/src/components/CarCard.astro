---
import BadgeEstado from './BadgeEstado.astro';
import PriceTag from './PriceTag.astro';

interface Props {
  marca: string;
  modelo: string;
  año: number;
  precio: number;
  kilometros: number;
  combustible: string;
  transmision: string;
  potencia: number;
  imagen: string;
  estado: 'Nuevo' | 'Seminuevo' | 'Ocasión';
  destacado: boolean;
  slug: string;
}

const {
  marca,
  modelo,
  año,
  precio,
  kilometros,
  combustible,
  transmision,
  potencia,
  imagen,
  estado,
  destacado,
  slug,
} = Astro.props;

const kmFormatted = new Intl.NumberFormat('es-ES').format(kilometros);
const href = `/coches/${slug}`;
---

<a href={href} class="car-card group">
  <!-- Image container -->
  <div class="car-card-image">
    <img
      src={imagen}
      alt={`${marca} ${modelo}`}
      class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
      loading="lazy"
      onerror="this.onerror=null;this.src='data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 400 260%22><rect fill=%22%231a1a1a%22 width=%22400%22 height=%22260%22/><text x=%2250%25%22 y=%2250%25%22 dominant-baseline=%22middle%22 text-anchor=%22middle%22 fill=%22%23555%22 font-size=%2218%22 font-family=%22system-ui%22>Sin imagen</text></svg>'"
    />

    <!-- Badges overlay -->
    <div class="absolute left-3 top-3 flex flex-wrap gap-1.5">
      <BadgeEstado estado={estado} />
      {destacado && (
        <span class="inline-flex items-center gap-1 rounded-full bg-brand-red/90 px-2.5 py-0.5 text-xs font-semibold text-white ring-1 ring-inset ring-brand-red/50">
          Destacado
        </span>
      )}
    </div>

    <!-- Price overlay (mobile) -->
    <div class="absolute bottom-3 right-3 sm:hidden">
      <PriceTag precio={precio} class="rounded-md bg-surface/80 px-2.5 py-1 text-base backdrop-blur-sm" />
    </div>
  </div>

  <!-- Content -->
  <div class="car-card-body">
    <!-- Header: brand + model + price -->
    <div class="mb-2 flex items-start justify-between gap-3">
      <div class="min-w-0">
        <p class="text-xs font-medium uppercase tracking-wider text-text-muted">{marca}</p>
        <h3 class="truncate text-base font-bold text-brand-white sm:text-lg">{modelo}</h3>
      </div>
      <PriceTag precio={precio} class="hidden shrink-0 text-lg sm:block" />
    </div>

    <!-- Essential specs (always visible) -->
    <div class="mb-3 flex flex-wrap gap-x-3 gap-y-1 text-xs text-text-muted sm:text-sm">
      <span>{año}</span>
      <span class="text-surface-overlay">·</span>
      <span>{kilometros === 0 ? '0 km' : `${kmFormatted} km`}</span>
      <span class="text-surface-overlay">·</span>
      <span>{combustible}</span>
    </div>

    <!-- Extended specs (desktop hover reveal) -->
    <div class="car-card-details">
      <div class="grid grid-cols-2 gap-2 border-t border-surface-overlay pt-3">
        <div class="flex items-center gap-2 text-xs text-text-muted">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          <span>{potencia} CV</span>
        </div>
        <div class="flex items-center gap-2 text-xs text-text-muted">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>{transmision}</span>
        </div>
      </div>
    </div>

    <!-- CTA visible on hover (desktop) -->
    <div class="car-card-cta">
      <span class="btn btn-primary btn-sm w-full">Ver detalles</span>
    </div>
  </div>
</a>
