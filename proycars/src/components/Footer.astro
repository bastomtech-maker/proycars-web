---
const currentYear = new Date().getFullYear();

const navLinks = [
  { href: '/', label: 'Inicio' },
  { href: '/coches', label: 'Coches' },
  { href: '/contacto', label: 'Contacto' },
];

const legalLinks = [
  { href: '/aviso-legal', label: 'Aviso legal' },
  { href: '/politica-privacidad', label: 'Política de privacidad' },
  { href: '/politica-cookies', label: 'Política de cookies' },
];
---

<footer class="mt-16 border-t border-surface-overlay sm:mt-24">
  <div class="container py-10 sm:py-14">
    <div class="grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-4">

      <!-- Logo + descripción -->
      <div>
        <a href="/" class="inline-block text-lg font-bold tracking-tight text-brand-white">
          PROY<span class="text-brand-red">CARS</span>
        </a>
        <p class="mt-3 text-sm leading-relaxed text-text-muted">
          Tu concesionario de confianza. Vehículos de ocasión revisados y garantizados al mejor precio.
        </p>
      </div>

      <!-- Navegación -->
      <div>
        <h4 class="mb-4 text-sm font-semibold uppercase tracking-wider text-text-secondary">Navegación</h4>
        <ul class="flex flex-col gap-2">
          {navLinks.map((link) => (
            <li>
              <a href={link.href} class="link-subtle text-sm">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Datos del concesionario + horario -->
      <div>
        <h4 class="mb-4 text-sm font-semibold uppercase tracking-wider text-text-secondary">Concesionario</h4>
        <ul class="flex flex-col gap-2 text-sm text-text-muted">
          <li class="flex items-start gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="mt-0.5 h-4 w-4 shrink-0 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>Calle Ejemplo 123, Madrid, España</span>
          </li>
          <li class="flex items-start gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="mt-0.5 h-4 w-4 shrink-0 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:+34600000000" class="transition-colors hover:text-brand-white">+34 600 000 000</a>
          </li>
          <li class="flex items-start gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="mt-0.5 h-4 w-4 shrink-0 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:info@proycars.com" class="transition-colors hover:text-brand-white">info@proycars.com</a>
          </li>
        </ul>
      </div>

      <!-- Horario -->
      <div>
        <h4 class="mb-4 text-sm font-semibold uppercase tracking-wider text-text-secondary">Horario</h4>
        <ul class="flex flex-col gap-2 text-sm text-text-muted">
          <li class="flex justify-between gap-4">
            <span>Lunes – Viernes</span>
            <span class="text-text-secondary">09:00 – 20:00</span>
          </li>
          <li class="flex justify-between gap-4">
            <span>Sábados</span>
            <span class="text-text-secondary">10:00 – 14:00</span>
          </li>
          <li class="flex justify-between gap-4">
            <span>Domingos</span>
            <span class="text-brand-red">Cerrado</span>
          </li>
        </ul>
      </div>

    </div>

    <!-- Legal + copyright -->
    <div class="mt-10 border-t border-surface-overlay pt-6">
      <div class="flex flex-col items-center gap-4 sm:flex-row sm:justify-between">
        <div class="flex flex-wrap justify-center gap-4 sm:gap-6">
          {legalLinks.map((link) => (
            <a href={link.href} class="link-subtle text-xs">{link.label}</a>
          ))}
        </div>
        <small class="text-text-muted">
          &copy; {currentYear} Proycars. Todos los derechos reservados.
        </small>
      </div>
    </div>
  </div>
</footer>
