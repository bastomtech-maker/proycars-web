---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Proycars — Plataforma automotriz' } = Astro.props;

import '../styles/global.css';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-surface text-text-primary">
    <header class="sticky top-0 z-50 border-b border-surface-overlay bg-surface/80 backdrop-blur-md">
      <nav class="container flex items-center justify-between py-3 sm:py-4">
        <a href="/" class="text-xl font-bold tracking-tight text-brand-white sm:text-2xl">
          PROY<span class="text-brand-red">CARS</span>
        </a>

        <div class="hidden items-center gap-6 md:flex">
          <a href="#" class="link-subtle text-sm transition-colors hover:text-brand-white">Inicio</a>
          <a href="#" class="link-subtle text-sm transition-colors hover:text-brand-white">Catálogo</a>
          <a href="#" class="link-subtle text-sm transition-colors hover:text-brand-white">Servicios</a>
          <a href="#" class="link-subtle text-sm transition-colors hover:text-brand-white">Contacto</a>
          <a href="#" class="btn btn-primary btn-sm">Cotizar</a>
        </div>

        <button
          id="mobile-menu-btn"
          class="btn-ghost rounded-md p-2 md:hidden"
          aria-label="Abrir menú"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </nav>

      <div id="mobile-menu" class="hidden border-t border-surface-overlay md:hidden">
        <div class="container flex flex-col gap-3 py-4">
          <a href="#" class="link-subtle py-2 text-sm">Inicio</a>
          <a href="#" class="link-subtle py-2 text-sm">Catálogo</a>
          <a href="#" class="link-subtle py-2 text-sm">Servicios</a>
          <a href="#" class="link-subtle py-2 text-sm">Contacto</a>
          <a href="#" class="btn btn-primary mt-2 w-full">Cotizar</a>
        </div>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="mt-16 border-t border-surface-overlay sm:mt-24">
      <div class="container py-8 sm:py-12">
        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
          <div>
            <p class="text-lg font-bold text-brand-white">
              PROY<span class="text-brand-red">CARS</span>
            </p>
            <p class="mt-2 text-sm text-text-muted">
              Plataforma automotriz de confianza.
            </p>
          </div>
          <div>
            <h4 class="mb-3 text-sm font-semibold uppercase tracking-wider text-text-muted">Navegación</h4>
            <ul class="flex flex-col gap-2">
              <li><a href="#" class="link-subtle text-sm">Inicio</a></li>
              <li><a href="#" class="link-subtle text-sm">Catálogo</a></li>
              <li><a href="#" class="link-subtle text-sm">Servicios</a></li>
            </ul>
          </div>
          <div>
            <h4 class="mb-3 text-sm font-semibold uppercase tracking-wider text-text-muted">Legal</h4>
            <ul class="flex flex-col gap-2">
              <li><a href="#" class="link-subtle text-sm">Términos</a></li>
              <li><a href="#" class="link-subtle text-sm">Privacidad</a></li>
            </ul>
          </div>
          <div>
            <h4 class="mb-3 text-sm font-semibold uppercase tracking-wider text-text-muted">Contacto</h4>
            <p class="text-sm text-text-muted">info@proycars.com</p>
          </div>
        </div>
        <div class="mt-8 border-t border-surface-overlay pt-6 text-center">
          <small class="text-text-muted">&copy; {new Date().getFullYear()} Proycars. Todos los derechos reservados.</small>
        </div>
      </div>
    </footer>

    <script>
      const btn = document.getElementById('mobile-menu-btn');
      const menu = document.getElementById('mobile-menu');
      btn?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
