---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import BadgeEstado from '../../components/BadgeEstado.astro';
import PriceTag from '../../components/PriceTag.astro';
import { buildWhatsAppUrl, buildTelUrl, CONTACT_PHONE_TEL } from '../../config/site';

export async function getStaticPaths() {
  const coches = await getCollection('coches');
  return coches.map((entry) => ({
    params: { slug: entry.data.slug },
    props: { coche: entry.data },
  }));
}

const { coche } = Astro.props;

const kmFormatted = new Intl.NumberFormat('es-ES').format(coche.kilometros);
const precioFormatted = new Intl.NumberFormat('es-ES', {
  style: 'currency',
  currency: 'EUR',
  minimumFractionDigits: 0,
  maximumFractionDigits: 0,
}).format(coche.precio);

const whatsappUrl = buildWhatsAppUrl(
  `Hola, me interesa el ${coche.marca} ${coche.modelo} (${coche.año}) a ${precioFormatted} que vi en vuestra web. ¿Podríais darme más información?`
);
const telUrl = buildTelUrl();

const specs = [
  { label: 'Marca', value: coche.marca, icon: 'tag' },
  { label: 'Modelo', value: coche.modelo, icon: 'car' },
  { label: 'Año', value: String(coche.año), icon: 'calendar' },
  { label: 'Kilómetros', value: coche.kilometros === 0 ? '0 km' : `${kmFormatted} km`, icon: 'road' },
  { label: 'Combustible', value: coche.combustible, icon: 'fuel' },
  { label: 'Transmisión', value: coche.transmision, icon: 'gear' },
  { label: 'Potencia', value: `${coche.potencia} CV`, icon: 'bolt' },
  { label: 'Estado', value: coche.estado, icon: 'check' },
];

const imgFallback = "this.onerror=null;this.src='data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 800 500%22><rect fill=%22%231a1a1a%22 width=%22800%22 height=%22500%22/><text x=%2250%25%22 y=%2250%25%22 dominant-baseline=%22middle%22 text-anchor=%22middle%22 fill=%22%23555%22 font-size=%2220%22 font-family=%22system-ui%22>Sin imagen</text></svg>'";
---

<BaseLayout title={`${coche.marca} ${coche.modelo} — Proycars`} description={`${coche.marca} ${coche.modelo} ${coche.año} · ${coche.combustible} · ${coche.potencia} CV · ${precioFormatted}`}>

  <!-- Breadcrumb -->
  <nav class="container pt-6 sm:pt-8" aria-label="Breadcrumb">
    <ol class="flex flex-wrap items-center gap-1.5 text-xs text-text-muted sm:text-sm">
      <li><a href="/" class="transition-colors hover:text-brand-white">Inicio</a></li>
      <li><span class="text-surface-overlay">/</span></li>
      <li><a href="/coches" class="transition-colors hover:text-brand-white">Coches</a></li>
      <li><span class="text-surface-overlay">/</span></li>
      <li class="text-brand-white">{coche.marca} {coche.modelo}</li>
    </ol>
  </nav>

  <!-- Main content -->
  <section class="container py-6 sm:py-10">
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-5 lg:gap-10">

      <!-- ===== GALLERY (left / top) ===== -->
      <div class="lg:col-span-3">
        <!-- Main image -->
        <div class="relative overflow-hidden rounded-xl bg-surface-raised">
          <div class="aspect-16/10">
            <img
              id="main-image"
              src={coche.imagenes[0]}
              alt={`${coche.marca} ${coche.modelo}`}
              class="h-full w-full object-cover"
              onerror={imgFallback}
            />
          </div>
          <!-- Badges -->
          <div class="absolute left-3 top-3 flex flex-wrap gap-1.5 sm:left-4 sm:top-4">
            <BadgeEstado estado={coche.estado} />
            {coche.destacado && (
              <span class="inline-flex items-center gap-1 rounded-full bg-brand-red/90 px-2.5 py-0.5 text-xs font-semibold text-white ring-1 ring-inset ring-brand-red/50">
                Destacado
              </span>
            )}
          </div>
        </div>

        <!-- Thumbnails -->
        {coche.imagenes.length > 1 && (
          <div class="mt-3 grid grid-cols-4 gap-2 sm:grid-cols-5 sm:gap-3" id="gallery-thumbs">
            {coche.imagenes.map((img: string, i: number) => (
              <button
                class:list={[
                  'gallery-thumb overflow-hidden rounded-lg border-2 transition-all',
                  i === 0 ? 'border-brand-red' : 'border-transparent hover:border-surface-overlay',
                ]}
                data-src={img}
                aria-label={`Ver imagen ${i + 1}`}
              >
                <div class="aspect-16/10">
                  <img
                    src={img}
                    alt={`${coche.marca} ${coche.modelo} — imagen ${i + 1}`}
                    class="h-full w-full object-cover"
                    loading="lazy"
                    onerror={imgFallback}
                  />
                </div>
              </button>
            ))}
          </div>
        )}
      </div>

      <!-- ===== INFO PANEL (right / bottom) ===== -->
      <div class="lg:col-span-2">
        <div class="lg:sticky lg:top-24">
          <!-- Header -->
          <p class="text-xs font-medium uppercase tracking-wider text-text-muted">{coche.marca}</p>
          <h1 class="mb-2 text-2xl font-bold text-brand-white sm:text-3xl lg:text-4xl">{coche.modelo}</h1>

          <div class="mb-4 flex flex-wrap items-center gap-3">
            <PriceTag precio={coche.precio} class="text-2xl sm:text-3xl" />
            <BadgeEstado estado={coche.estado} />
          </div>

          <!-- Quick specs row -->
          <div class="mb-6 flex flex-wrap gap-x-4 gap-y-1.5 text-sm text-text-muted">
            <span>{coche.año}</span>
            <span class="text-surface-overlay">·</span>
            <span>{coche.kilometros === 0 ? '0 km' : `${kmFormatted} km`}</span>
            <span class="text-surface-overlay">·</span>
            <span>{coche.combustible}</span>
            <span class="text-surface-overlay">·</span>
            <span>{coche.potencia} CV</span>
          </div>

          <!-- WhatsApp CTA -->
          <a
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-whatsapp btn-lg mb-4 w-full"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Preguntar por este coche
          </a>

          <a href={telUrl} class="btn btn-outline mb-6 w-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Llamar al concesionario
          </a>

          <!-- Ficha técnica -->
          <div class="rounded-xl border border-surface-overlay bg-surface-raised">
            <h2 class="border-b border-surface-overlay px-4 py-3 text-sm font-semibold uppercase tracking-wider text-text-secondary sm:px-5">
              Ficha técnica
            </h2>
            <dl class="divide-y divide-surface-overlay">
              {specs.map((spec) => (
                <div class="flex items-center justify-between gap-4 px-4 py-3 sm:px-5">
                  <dt class="flex items-center gap-2 text-sm text-text-muted">
                    {spec.icon === 'tag' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" /></svg>
                    )}
                    {spec.icon === 'car' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" /></svg>
                    )}
                    {spec.icon === 'calendar' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                    )}
                    {spec.icon === 'road' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" /></svg>
                    )}
                    {spec.icon === 'fuel' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" /><path stroke-linecap="round" stroke-linejoin="round" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z" /></svg>
                    )}
                    {spec.icon === 'gear' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                    )}
                    {spec.icon === 'bolt' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                    )}
                    {spec.icon === 'check' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-brand-red" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    )}
                    {spec.label}
                  </dt>
                  <dd class="text-sm font-medium text-brand-white">{spec.value}</dd>
                </div>
              ))}
            </dl>
          </div>

          <!-- Description -->
          <div class="mt-6 rounded-xl border border-surface-overlay bg-surface-raised p-4 sm:p-5">
            <h2 class="mb-3 text-sm font-semibold uppercase tracking-wider text-text-secondary">Descripción</h2>
            <p class="text-sm leading-relaxed text-text-muted">
              {coche.marca} {coche.modelo} del año {coche.año} con {coche.kilometros === 0 ? '0 km' : `${kmFormatted} km`}.
              Motor {coche.combustible.toLowerCase()} de {coche.potencia} CV con transmisión {coche.transmision.toLowerCase()}.
              Vehículo en estado {coche.estado.toLowerCase()}, revisado y con garantía de 12 meses incluida.
              Financiación disponible a medida. Contacta con nosotros para más información o para concertar una visita.
            </p>
          </div>

          <!-- Back link -->
          <a href="/coches" class="mt-4 inline-flex items-center gap-1.5 text-sm text-text-muted transition-colors hover:text-brand-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
            </svg>
            Volver al catálogo
          </a>
        </div>
      </div>

    </div>
  </section>

</BaseLayout>

<script>
  // Gallery thumbnail switching
  const mainImage = document.getElementById('main-image') as HTMLImageElement;
  const thumbs = document.querySelectorAll<HTMLButtonElement>('.gallery-thumb');

  thumbs.forEach((thumb) => {
    thumb.addEventListener('click', () => {
      const src = thumb.dataset.src;
      if (src && mainImage) {
        mainImage.src = src;
        // Update active state
        thumbs.forEach((t) => {
          t.classList.remove('border-brand-red');
          t.classList.add('border-transparent');
        });
        thumb.classList.remove('border-transparent');
        thumb.classList.add('border-brand-red');
      }
    });
  });
</script>
